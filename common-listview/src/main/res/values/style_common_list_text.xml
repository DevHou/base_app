<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="common_list_text_white_base">
        <item name="android:textColor">@color/common_list_white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="common_list_text_black_middle_base">
        <item name="android:textColor">@color/common_list_middle_black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--快速检索的页面中间显示的字母-->
    <style name="common_list_text_white_big" parent="common_list_text_white_base">
        <item name="android:textSize">18sp</item>
    </style>

    <!--加载更多文字-->
    <style name="common_list_text_black_middle_small" parent="common_list_text_black_middle_base">
        <item name="android:textSize">14sp</item>
    </style>

</resources>
