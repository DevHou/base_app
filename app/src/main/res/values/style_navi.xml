<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ##########窗口顶部导航############# -->
    <!-- 标题栏高度 -->
    <dimen name="navi_bar_height">48dip</dimen>
    <!-- 导航栏图片大小 -->
    <dimen name="navi_bar_image_size">25dip</dimen>
    <!-- 窗口顶部导航条相邻按钮间的间距空隙 -->
    <dimen name="navi_bar_space_between_buttons">13dip</dimen>
    <!-- 窗口顶部导航条的左右内边距 -->
    <dimen name="navi_bar_padding_lr">13dip</dimen>
    <!-- 弹出菜单每条高度-->
    <dimen name="navi_bar_popup_item_height">40dip</dimen>

    <!-- 标题栏文字 -->
    <style name="navi_bar_text_title">
        <item name="android:textColor">@color/app_text_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 标题栏按钮 -->
    <style name="navi_bar_image_button">
        <item name="android:layout_height">@dimen/navi_bar_image_size</item>
        <item name="android:layout_width">@dimen/navi_bar_image_size</item>
    </style>

    <!-- 标题栏按钮 -->
    <style name="navi_bar_text_button">
        <item name="android:textColor">@color/selector_text_white</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <!--标题栏样式-->
    <style name="navi_bar_title" parent="@style/ToolbarStyle">
        <item name="android:background">@color/app_title_bar_bg</item>
        <!--<item name="android:layout_height">@dimen/navi_bar_height</item>-->
        <!--<item name="android:layout_width">match_parent</item>-->
    </style>

</resources>