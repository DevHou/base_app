<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ##########窗口顶部导航############# -->
    <!-- 导航栏图片大小 -->
    <dimen name="common_image_size_navi_bar">20dip</dimen>
    <!-- 窗口顶部导航条相邻按钮间的间距空隙 -->
    <dimen name="common_space_navi_bar_between_buttons">13dip</dimen>
    <!-- 窗口顶部导航条的左右内边距 -->
    <dimen name="common_padding_navi_bar_lr">13dip</dimen>
    <!-- 弹出菜单每条高度-->
    <dimen name="common_height_navi_bar_popup_item">40dip</dimen>

    <!-- 标题栏文字 -->
    <style name="common_text_navi_bar_title">
        <item name="android:textColor">@color/common_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 标题栏按钮 -->
    <style name="common_icon_navi_bar_button">
        <item name="android:layout_height">@dimen/common_image_size_navi_bar</item>
        <item name="android:layout_width">@dimen/common_image_size_navi_bar</item>
    </style>

    <!-- 标题栏按钮 -->
    <style name="common_text_navi_bar_button">
        <item name="android:textColor">@color/common_selector_text_white</item>
        <item name="android:textSize">@dimen/common_text_size_30</item>
    </style>

    <!--标题栏样式-->
    <style name="common_title_bar">
        <item name="android:background">@color/common_blue</item>
        <item name="android:layout_height">@dimen/common_height_title_bar</item>
        <item name="android:layout_width">match_parent</item>
    </style>

</resources>