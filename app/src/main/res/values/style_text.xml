<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <dimen name="text_size_big">20sp</dimen>
    <dimen name="text_size_normal">16sp</dimen>
    <dimen name="text_size_small">14sp</dimen>
    <dimen name="text_size_small_v2">12sp</dimen>

    <!--
    android:shadowColor 阴影颜色

	android:shadowDx 阴影的水平偏移量,值为正数，向右移动阴影；

	android:shadowDy 阴影的垂直偏移量 ,值为正数，向下移动阴影；

	android:shadowRadius 阴影的范围 
    -->

    <style name="text_white_base">
        <item name="android:textColor">@color/selector_text_white</item>
        <item name="android:textColorHint">@color/app_text_hint</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:shadowColor">@color/text_white_shadow</item>-->
        <!--<item name="android:shadowDx">0</item>-->
        <!--<item name="android:shadowDy">1</item>-->
        <!--<item name="android:shadowRadius">1</item>-->
    </style>

    <style name="text_white_normal" parent="text_white_base">
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="text_black_high_normal" parent="text_white_base">
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

</resources>