<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/navi_bar_space_between_buttons">

    <com.houlijiang.common.image.CommonImageView
        android:id="@+id/common_item_title_bar_icon_iv"
        android:layout_width="@dimen/navi_bar_image_size"
        android:layout_height="@dimen/navi_bar_image_size"
        android:layout_gravity="center"
        app:imageScaleType="centerInside" />

    <TextView
        android:id="@+id/common_item_title_bar_icon_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center" />

</FrameLayout>