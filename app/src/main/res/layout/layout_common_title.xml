<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/common_title_bar">

    <!-- 多套一层，以免外面include时改了id导致查找不到title-->
    <RelativeLayout
        android:id="@+id/layout_common_title_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/layout_common_title_fl_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/selector_common_blue_bg"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/common_image_size_navi_bar"
                android:layout_gravity="center_vertical"
                android:background="@color/common_transparent"
                android:paddingLeft="@dimen/common_padding_navi_bar_lr"
                android:src="@drawable/ic_common_title_back" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/layout_common_title_ll_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_space_navi_bar_between_buttons"
            android:gravity="center_vertical"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/layout_common_title_tv_title"
            style="@style/common_text_navi_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_toLeftOf="@id/layout_common_title_ll_buttons"
            android:layout_toRightOf="@id/layout_common_title_fl_back"
            android:singleLine="true"
            android:text="" />

    </RelativeLayout>
</FrameLayout>