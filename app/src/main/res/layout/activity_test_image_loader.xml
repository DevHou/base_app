<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.houlijiang.common.image.CommonImageView
            android:layout_width="100dip"
            android:layout_height="100dip"
            app:imageScaleType="centerCrop"
            app:imageSrc="@drawable/abc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="drawable" />

        <com.houlijiang.common.image.CircleImageView
            android:layout_width="100dip"
            android:layout_height="100dip"
            app:imageSrc="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="drawable circle" />

        <com.houlijiang.common.image.CommonImageView
            android:id="@+id/test_image_loader_iv_net"
            android:layout_width="100dip"
            android:layout_height="100dip"
            app:imageScaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="net" />

        <com.houlijiang.common.image.CommonImageView
            android:id="@+id/test_image_loader_iv_file"
            android:layout_width="100dip"
            android:layout_height="100dip"
            app:imageScaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="file" />

    </LinearLayout>
</ScrollView>
